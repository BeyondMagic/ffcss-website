---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---




<ul class="tag-list">
  {
    tags.map(tag => (
      <li class="tag">
        {tag}
      </li>
    ))
  }
</ul>





<style lang="scss">

  .tag-list {

    display: flex; gap: var(--spacing-small);
    flex-wrap: wrap;

    list-style: none;
    font-size: 80%;

  }


  .tag {

    padding: .2ch 1ch;

    border-radius: 9999px;
    background-color: var(--base);

  }

</style>
